<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.StationsView"
             x:DataType="vm:StationsViewModel">

    <Grid RowDefinitions="Auto,*" Margin="{StaticResource PageMargin}">
        <Grid Grid.Row="0">
            <TextBlock Classes="Header" Text="Station Management"/>
            <Button Content="âž• New Station" Command="{Binding NewStationCommand}" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <!-- Station List Card -->
            <Border Grid.Column="0" Classes="Card" Margin="0,0,20,0">
                <Grid RowDefinitions="Auto,*">
                    <Button Grid.Row="0" Classes="Outline" Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right" Margin="0,0,0,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Stations}" SelectedItem="{Binding SelectedStation}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="*,*,Auto">
                                        <TextBox Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent" FontWeight="SemiBold"/>
                                        <TextBox Grid.Column="1" Text="{Binding Location}" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="{StaticResource LightTextBrush}"/>
                                        <!-- Note: Using Click handler here because the Command binding in ListBox item template can be tricky without relative source -->
                                        <Button Grid.Column="2" Classes="Ghost" Content="ðŸ—‘ï¸" Padding="8" Click="OnDeleteStation" Foreground="Red"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Edit Form Card -->
            <Border Grid.Column="1" Classes="Card" 
                    IsVisible="{Binding IsEditMode}" Width="350">
                <StackPanel Spacing="20">
                    <TextBlock Text="New Station" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    
                    <StackPanel Spacing="5">
                         <TextBlock Text="Name" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <TextBox Text="{Binding StationName}" Watermark="e.g. Central Station"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                         <TextBlock Text="Location" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <TextBox Text="{Binding Location}" Watermark="e.g. Downtown"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#E74C3C" TextWrapping="Wrap" FontSize="12"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Classes="Ghost" Content="Cancel" Command="{Binding CancelEditCommand}"/>
                        <Button Content="Save Station" Command="{Binding SaveStationCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

