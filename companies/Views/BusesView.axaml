<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.BusesView"
             x:DataType="vm:BusesViewModel">

    <Grid RowDefinitions="Auto,*" Margin="{StaticResource PageMargin}">
        <!-- Header -->
        <Grid Grid.Row="0">
            <TextBlock Classes="Header" Text="Bus Management"/>
            <Button Content="âž• New Bus" Command="{Binding NewBusCommand}" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <!-- Bus List Card -->
            <Border Grid.Column="0" Classes="Card" Margin="0,0,20,0">
                <Grid RowDefinitions="Auto,Auto,*">
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                         <TextBlock Text="Fleet Overview" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                         <Button Classes="Outline" Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Table Header -->
                     <Grid Grid.Row="1" ColumnDefinitions="150,100,120,*" Margin="15,0,15,5">
                        <TextBlock Grid.Column="0" Text="PLATE NUMBER" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="CAPACITY" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="AVAILABLE" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="3" Text="ACTIONS" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12" HorizontalAlignment="Right"/>
                    </Grid>
                    <Separator Grid.Row="1" VerticalAlignment="Bottom" Background="{StaticResource BorderBrush}" Margin="0,5"/>

                    <ListBox Grid.Row="2" ItemsSource="{Binding Buses}" SelectedItem="{Binding SelectedBus}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="150,100,120,*">
                                        <TextBlock Grid.Column="0" Text="{Binding PlateNumber}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}"/>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                             <TextBlock Text="ðŸ’º"/>
                                             <TextBlock Text="{Binding Capacity}" Foreground="{StaticResource LightTextBrush}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                            <Border Background="#E8F5E9" CornerRadius="4" Padding="6,2">
                                                <TextBlock Text="{Binding AvailableSeats, StringFormat='{}{0} Left'}" Foreground="#2E7D32" FontSize="11" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                            <Button Classes="Ghost" Content="âœï¸" Padding="8" Command="{Binding $parent[UserControl].DataContext.EditBusCommand}" CommandParameter="{Binding}" ToolTip.Tip="Edit"/>
                                            <Button Classes="Ghost" Content="ðŸ—‘ï¸" Padding="8" Command="{Binding $parent[UserControl].DataContext.DeleteBusCommand}" CommandParameter="{Binding}" Foreground="Red" ToolTip.Tip="Delete"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Edit Form Card -->
            <Border Grid.Column="1" Classes="Card" 
                    IsVisible="{Binding IsEditMode}" Width="350">
                <StackPanel Spacing="20">
                    <TextBlock Text="{Binding SelectedBus, Converter={StaticResource NullToTextConverter}, ConverterParameter='Edit Bus:New Bus'}" 
                               FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    
                    <StackPanel Spacing="5">
                         <TextBlock Text="Plate Number" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <TextBox Text="{Binding PlateNumber}" Watermark="e.g. AB-123-CD"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                         <TextBlock Text="Capacity" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <NumericUpDown Value="{Binding Capacity}" Minimum="1" Maximum="100"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#E74C3C" TextWrapping="Wrap" FontSize="12"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Classes="Ghost" Content="Cancel" Command="{Binding CancelEditCommand}"/>
                        <Button Content="Save Bus" Command="{Binding SaveBusCommand}"/>
                    </StackPanel>
                    
                    <Separator Background="{StaticResource BorderBrush}" Margin="0,10"/>
                    
                    <!-- Driver Management -->
                    <TextBlock Text="Drivers" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    
                    <Border Background="#F8F9FA" CornerRadius="4" Padding="10">
                        <StackPanel Spacing="10">
                            <!-- Assigned Drivers -->
                            <TextBlock Text="Assigned:" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource LightTextBrush}"/>
                            <ItemsControl ItemsSource="{Binding AssignedDrivers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding FullName}" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                                            <Button Grid.Column="1" Classes="Ghost" Content="âŒ" ToolTip.Tip="Unassign" 
                                                    Command="{Binding $parent[UserControl].DataContext.UnassignDriverCommand}" 
                                                    CommandParameter="{Binding}" Foreground="Red" Padding="5,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="No drivers assigned." IsVisible="{Binding !AssignedDrivers.Count}"  Foreground="{StaticResource LightTextBrush}" FontStyle="Italic" FontSize="11"/>
                            
                            <Separator Background="{StaticResource BorderBrush}"/>
                            
                            <!-- Assign New Driver -->
                            <TextBlock Text="Assign Driver:" FontWeight="SemiBold" FontSize="12" Foreground="{StaticResource LightTextBrush}"/>
                            <TextBox Text="{Binding DriverSearchQuery}" Watermark="Search drivers..." Classes="Small"/>
                            
                            <ListBox ItemsSource="{Binding AvailableDrivers}" MaxHeight="150" Background="White" BorderThickness="1" BorderBrush="#E0E0E0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel>
                                                <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" FontSize="12"/>
                                                <TextBlock Text="{Binding LicenseNumber}" FontSize="10" Foreground="{StaticResource LightTextBrush}"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Classes="Outline" Content="Assign" FontSize="10" Padding="5,2"
                                                    Command="{Binding $parent[UserControl].DataContext.AssignDriverCommand}" 
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

