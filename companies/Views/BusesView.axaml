<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.BusesView"
             x:DataType="vm:BusesViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Bus Management" FontSize="24" FontWeight="Bold"/>
            <Button Content="âž• New Bus" Command="{Binding NewBusCommand}" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <!-- Bus List -->
            <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <StackPanel Spacing="10">
                    <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
                    
                    <ListBox ItemsSource="{Binding Buses}" SelectedItem="{Binding SelectedBus}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="150,100,120,*">
                                        <TextBox Grid.Column="0" Text="{Binding PlateNumber}" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                        <TextBox Grid.Column="1" Text="{Binding Capacity}" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                        <TextBox Grid.Column="2" Text="{Binding AvailableSeats}" VerticalAlignment="Center" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                            <Button Content="âœï¸ Edit" Padding="5" Click="OnEditBus"/>
                                            <Button Content="ðŸ—‘ï¸ Delete" Padding="5" Click="OnDeleteBus"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Edit Form -->
            <Border Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15" 
                    IsVisible="{Binding IsEditMode}" Width="300">
                <StackPanel Spacing="15">
                    <TextBlock Text="{Binding SelectedBus, Converter={StaticResource NullToTextConverter}, ConverterParameter='Edit Bus:New Bus'}" 
                               FontSize="18" FontWeight="Bold"/>
                    
                    <TextBox Watermark="Plate Number" Text="{Binding PlateNumber}"/>
                    <NumericUpDown Watermark="Capacity" Value="{Binding Capacity}" Minimum="1" Maximum="100"/>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <Button Content="Save" Command="{Binding SaveBusCommand}"/>
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

