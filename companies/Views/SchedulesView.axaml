<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.SchedulesView"
             x:DataType="vm:SchedulesViewModel">

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Schedule Management" FontSize="24" FontWeight="Bold"/>
            <Button Content="âž• New Schedule" Command="{Binding NewScheduleCommand}" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <StackPanel Spacing="10">
                    <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
                    
                    <ListBox ItemsSource="{Binding Schedules}" SelectedItem="{Binding SelectedSchedule}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="150,150,100,*">
                                        <TextBlock Grid.Column="0" Text="{Binding DepartureTime, StringFormat='{}{0:g}'}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding ArrivalTime, StringFormat='{}{0:g}'}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding BusId}" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                            <Button Content="âœï¸ Edit" Padding="5" Click="OnEditSchedule"/>
                                            <Button Content="ðŸ—‘ï¸ Delete" Padding="5" Click="OnDeleteSchedule"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15" 
                    IsVisible="{Binding IsEditMode}" Width="350">
                <StackPanel Spacing="15">
                    <TextBlock Text="New Schedule" FontSize="18" FontWeight="Bold"/>
                    
                    <ComboBox ItemsSource="{Binding Routes}" SelectedItem="{Binding SelectedRoute}" 
                              PlaceholderText="Select Route" SelectionChanged="OnRouteChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Origin}"/> â†’ <Run Text="{Binding Destination}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox ItemsSource="{Binding RouteSegments}" SelectedItem="{Binding SelectedRouteSegment}" 
                              PlaceholderText="Select Route Segment">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox ItemsSource="{Binding Buses}" SelectedItem="{Binding SelectedBus}" 
                              PlaceholderText="Select Bus">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PlateNumber}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="Departure Date &amp; Time" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding DepartureDate}"/>
                    <TimePicker SelectedTime="{Binding DepartureTime}"/>
                    <TextBlock Text="Arrival Date &amp; Time (Optional)" FontWeight="SemiBold" Margin="0,10,0,0"/>
                    <DatePicker SelectedDate="{Binding ArrivalDate}"/>
                    <TimePicker SelectedTime="{Binding ArrivalTime}"/>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <Button Content="Save" Command="{Binding SaveScheduleCommand}"/>
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

