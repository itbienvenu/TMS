<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.SchedulesView"
             x:DataType="vm:SchedulesViewModel">

    <Grid RowDefinitions="Auto,*" Margin="{StaticResource PageMargin}">
        <Grid Grid.Row="0">
            <TextBlock Classes="Header" Text="Schedule Management"/>
            <Button Content="âž• New Schedule" Command="{Binding NewScheduleCommand}" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <!-- Schedule List Card -->
            <Border Grid.Column="0" Classes="Card" Margin="0,0,20,0">
                <Grid RowDefinitions="Auto,Auto,*">
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                         <TextBlock Text="Departures" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                         <Button Classes="Outline" Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Table Header -->
                     <Grid Grid.Row="1" ColumnDefinitions="160,160,100,*" Margin="15,0,15,5">
                        <TextBlock Grid.Column="0" Text="DEPARTURE" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="ARRIVAL" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="BUS ID" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="3" Text="ACTIONS" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12" HorizontalAlignment="Right"/>
                    </Grid>
                    <Separator Grid.Row="1" VerticalAlignment="Bottom" Background="{StaticResource BorderBrush}" Margin="0,5"/>

                    <ListBox Grid.Row="2" ItemsSource="{Binding Schedules}" SelectedItem="{Binding SelectedSchedule}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="160,160,100,*">
                                        <TextBlock Grid.Column="0" Text="{Binding DepartureTime, StringFormat='{}{0:g}'}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding ArrivalTime, StringFormat='{}{0:g}'}" VerticalAlignment="Center" Foreground="{StaticResource LightTextBrush}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding BusId}" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBlueBrush}"/>
                                        
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                            <Button Classes="Ghost" Content="âœï¸" Padding="8" Click="OnEditSchedule" ToolTip.Tip="Edit"/>
                                            <Button Classes="Ghost" Content="ðŸ—‘ï¸" Padding="8" Click="OnDeleteSchedule" Foreground="Red" ToolTip.Tip="Delete"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Edit Form Card -->
            <Border Grid.Column="1" Classes="Card" 
                    IsVisible="{Binding IsEditMode}" Width="400">
                <ScrollViewer>
                <StackPanel Spacing="15">
                    <TextBlock Text="New Schedule" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="Route" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Routes}" SelectedItem="{Binding SelectedRoute}" 
                                  HorizontalAlignment="Stretch" PlaceholderText="Select Route" SelectionChanged="OnRouteChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding Origin}"/> â†’ <Run Text="{Binding Destination}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Route Segment (Optional)" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <ComboBox ItemsSource="{Binding RouteSegments}" SelectedItem="{Binding SelectedRouteSegment}" 
                                  HorizontalAlignment="Stretch" PlaceholderText="Select Route Segment">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Bus" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Buses}" SelectedItem="{Binding SelectedBus}" 
                                  HorizontalAlignment="Stretch" PlaceholderText="Select Bus">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PlateNumber}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="5">
                         <TextBlock Text="Departure" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <DatePicker SelectedDate="{Binding DepartureDate}" HorizontalAlignment="Stretch"/>
                         <TimePicker SelectedTime="{Binding DepartureTime}" HorizontalAlignment="Stretch"/>
                    </StackPanel>

                     <StackPanel Spacing="5">
                         <TextBlock Text="Arrival (Optional)" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <DatePicker SelectedDate="{Binding ArrivalDate}" HorizontalAlignment="Stretch"/>
                         <TimePicker SelectedTime="{Binding ArrivalTime}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#E74C3C" TextWrapping="Wrap" FontSize="12"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <Button Classes="Ghost" Content="Cancel" Command="{Binding CancelEditCommand}"/>
                        <Button Content="Save Schedule" Command="{Binding SaveScheduleCommand}"/>
                    </StackPanel>
                </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>

