<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <TextBlock Text="Dashboard Overview" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Statistics Cards -->
            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto">
                <Border Grid.Column="0" Background="#3498DB" CornerRadius="8" Padding="20" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Buses" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding TotalBuses}" Foreground="White" FontSize="32" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" Background="#2ECC71" CornerRadius="8" Padding="20" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Routes" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding TotalRoutes}" Foreground="White" FontSize="32" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="2" Background="#E67E22" CornerRadius="8" Padding="20" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Tickets" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding TotalTickets}" Foreground="White" FontSize="32" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="3" Background="#9B59B6" CornerRadius="8" Padding="20" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Schedules" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding TotalSchedules}" Foreground="White" FontSize="32" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Tickets -->
            <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15">
                <StackPanel Spacing="10">
                    <Grid>
                        <TextBlock Text="Recent Tickets" FontSize="18" FontWeight="Bold"/>
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <ItemsControl ItemsSource="{Binding RecentTickets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="150,*,100,150">
                                        <TextBlock Grid.Column="0" Text="{Binding Id}" FontSize="12"/>
                                        <TextBlock Grid.Column="1" Text="{Binding FullName}" FontSize="12"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Status}" FontSize="12"/>
                                        <TextBlock Grid.Column="3" Text="{Binding CreatedAt, StringFormat='{}{0:g}'}" FontSize="12"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- User Info -->
            <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="User Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding CurrentUser.FullName, StringFormat='Name: {0}'}" Margin="0,5"/>
                    <TextBlock Text="{Binding CurrentUser.Email, StringFormat='Email: {0}'}" Margin="0,5"/>
                    <TextBlock Text="{Binding CurrentUser.Role, StringFormat='Role: {0}'}" Margin="0,5"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

