<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CompanyDashboard.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="CompanyDashboard.Views.LoginView"
        x:DataType="vm:LoginViewModel"
        Title="Company Login"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <Design.DataContext>
        <vm:LoginViewModel/>
    </Design.DataContext>

    <Border Background="#F5F5F5" Padding="40">
        <StackPanel Spacing="20" VerticalAlignment="Center">
            <!-- Header -->
            <TextBlock Text="Company Dashboard" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Login Step -->
            <StackPanel IsVisible="{Binding !IsOtpStep}" Spacing="15">
                <TextBlock Text="Login Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LoginEmail}" 
                        Watermark="Enter your company login email"
                        IsEnabled="{Binding !IsLoading}"/>

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox Text="{Binding Password}" 
                        PasswordChar="â—"
                        Watermark="Enter your password"
                        IsEnabled="{Binding !IsLoading}"/>

                <Button Content="Login" 
                       Command="{Binding StartLoginCommand}"
                       IsEnabled="{Binding !IsLoading}"
                       HorizontalAlignment="Stretch"
                       Margin="0,20,0,0"
                       Padding="15,10"
                       FontSize="16"/>

                <ProgressBar IsIndeterminate="True" 
                           IsVisible="{Binding IsLoading}"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- OTP Step -->
            <StackPanel IsVisible="{Binding IsOtpStep}" Spacing="15">
                <TextBlock Text="Enter OTP Code" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Please check your email for the OTP code" 
                          FontSize="12" 
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          Margin="0,0,0,10"/>

                <TextBox Text="{Binding OtpCode}" 
                        Watermark="Enter OTP code"
                        FontSize="20"
                        TextAlignment="Center"
                        MaxLength="6"
                        IsEnabled="{Binding !IsLoading}"/>

                <Button Content="Verify OTP" 
                       Command="{Binding VerifyOtpCommand}"
                       IsEnabled="{Binding !IsLoading}"
                       HorizontalAlignment="Stretch"
                       Margin="0,20,0,0"
                       Padding="15,10"
                       FontSize="16"/>

                <Button Content="Back to Login" 
                       Command="{Binding BackToLoginCommand}"
                       IsEnabled="{Binding !IsLoading}"
                       HorizontalAlignment="Stretch"
                       Margin="0,5,0,0"
                       Padding="10,8"
                       FontSize="14"/>

                <ProgressBar IsIndeterminate="True" 
                           IsVisible="{Binding IsLoading}"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Error Message -->
            <Border IsVisible="{Binding HasErrorMessage}"
                   Background="#FFEBEE"
                   BorderBrush="#F44336"
                   BorderThickness="1"
                   CornerRadius="5"
                   Padding="15"
                   Margin="0,10,0,0">
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="#C62828"
                          TextWrapping="Wrap"/>
            </Border>

            <!-- Info Message -->
            <Border IsVisible="{Binding HasInfoMessage}"
                   Background="#E3F2FD"
                   BorderBrush="#2196F3"
                   BorderThickness="1"
                   CornerRadius="5"
                   Padding="15"
                   Margin="0,10,0,0">
                <TextBlock Text="{Binding InfoMessage}" 
                          Foreground="#1565C0"
                          TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </Border>
</Window>

