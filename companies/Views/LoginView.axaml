<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CompanyDashboard.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="CompanyDashboard.Views.LoginView"
        x:DataType="vm:LoginViewModel"
        Title="Company Login"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <Design.DataContext>
        <vm:LoginViewModel/>
    </Design.DataContext>

    <Border Background="{StaticResource DashboardBgBrush}">
        <Grid>
            <!-- Centered Card -->
            <Border Classes="Card" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center" BoxShadow="0 4 20 0 #20000000">
                <StackPanel Spacing="25" VerticalAlignment="Center">
                    <!-- Header -->
                    <StackPanel Spacing="10" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸš" FontSize="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="Company Dashboard" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Foreground="{StaticResource DarkTextBrush}"/>
                        <TextBlock Text="Sign in to your account" 
                                  FontSize="14" 
                                  Foreground="{StaticResource LightTextBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
        
                    <!-- Login Step -->
                    <StackPanel IsVisible="{Binding !IsOtpStep}" Spacing="15">
                        <StackPanel Spacing="5">
                             <TextBlock Text="Login Email" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}"/>
                             <TextBox Text="{Binding LoginEmail}" 
                                     Watermark="Enter your company login email"
                                     IsEnabled="{Binding !IsLoading}"/>
                        </StackPanel>
        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Password" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}"/>
                            <TextBox Text="{Binding Password}" 
                                    PasswordChar="â—"
                                    Watermark="Enter your password"
                                    IsEnabled="{Binding !IsLoading}"/>
                        </StackPanel>
        
                        <Button Content="Login" 
                               Command="{Binding StartLoginCommand}"
                               IsEnabled="{Binding !IsLoading}"
                               HorizontalAlignment="Stretch"
                               Margin="0,10,0,0"/>
        
                        <ProgressBar IsIndeterminate="True" 
                                   IsVisible="{Binding IsLoading}"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
        
                    <!-- OTP Step -->
                    <StackPanel IsVisible="{Binding IsOtpStep}" Spacing="15">
                        <TextBlock Text="Enter OTP Code" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  HorizontalAlignment="Center"
                                  Foreground="{StaticResource DarkTextBrush}"/>
        
                        <TextBlock Text="Please check your email for the OTP code" 
                                  FontSize="14" 
                                  Foreground="{StaticResource LightTextBrush}"
                                  HorizontalAlignment="Center"
                                  TextWrapping="Wrap"/>
        
                        <TextBox Text="{Binding OtpCode}" 
                                Watermark="000000"
                                FontSize="24"
                                TextAlignment="Center"
                                LetterSpacing="5"
                                MaxLength="6"
                                Width="200"
                                HorizontalAlignment="Center"
                                IsEnabled="{Binding !IsLoading}"/>
        
                        <Button Content="Verify OTP" 
                               Command="{Binding VerifyOtpCommand}"
                               IsEnabled="{Binding !IsLoading}"
                               HorizontalAlignment="Stretch"
                               Margin="0,10,0,0"/>
        
                        <Button Classes="Ghost" 
                               Content="Back to Login" 
                               Command="{Binding BackToLoginCommand}"
                               IsEnabled="{Binding !IsLoading}"
                               HorizontalAlignment="Center"/>
        
                        <ProgressBar IsIndeterminate="True" 
                                   IsVisible="{Binding IsLoading}"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
        
                    <!-- Error Message -->
                    <Border IsVisible="{Binding HasErrorMessage}"
                           Background="#FFEBEE"
                           BorderBrush="#F44336"
                           BorderThickness="1"
                           CornerRadius="5"
                           Padding="15">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="âš ï¸" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ErrorMessage}" 
                                      Foreground="#C62828"
                                      TextWrapping="Wrap"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
        
                    <!-- Info Message -->
                    <Border IsVisible="{Binding HasInfoMessage}"
                           Background="{StaticResource SecondaryBlueBrush}"
                           BorderBrush="{StaticResource PrimaryBlueBrush}"
                           BorderThickness="1"
                           CornerRadius="5"
                           Padding="15">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="â„¹ï¸" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding InfoMessage}" 
                                      Foreground="{StaticResource PrimaryBlueBrush}"
                                      TextWrapping="Wrap"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

