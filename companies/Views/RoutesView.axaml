<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.RoutesView"
             x:DataType="vm:RoutesViewModel">

    <Grid RowDefinitions="Auto,*" Margin="{StaticResource PageMargin}">
        <Grid Grid.Row="0">
            <TextBlock Classes="Header" Text="Route Management"/>
            <Button Content="âž• New Route" Command="{Binding NewRouteCommand}" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <!-- Route List Card -->
            <Border Grid.Column="0" Classes="Card" Margin="0,0,20,0">
                <Grid RowDefinitions="Auto,Auto,*">
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                         <TextBlock Text="Active Routes" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                         <Button Classes="Outline" Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Table Header -->
                     <Grid Grid.Row="1" ColumnDefinitions="*,*,120,80" Margin="15,0,15,5">
                        <TextBlock Grid.Column="0" Text="ORIGIN" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="DESTINATION" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="PRICE" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="3" Text="ACTIONS" FontWeight="SemiBold" Foreground="{StaticResource LightTextBrush}" FontSize="12" HorizontalAlignment="Right"/>
                    </Grid>
                    <Separator Grid.Row="1" VerticalAlignment="Bottom" Background="{StaticResource BorderBrush}" Margin="0,5"/>

                    <ListBox Grid.Row="2" ItemsSource="{Binding Routes}" SelectedItem="{Binding SelectedRoute}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="*,*,120,Auto">
                                        <TextBlock Grid.Column="0" Text="{Binding Origin}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Destination}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat='{}{0:N0} RWF'}" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBlueBrush}" FontWeight="Bold"/>
                                        
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                            <Button Classes="Ghost" Content="âœï¸" Padding="8" Click="OnEditRoute" ToolTip.Tip="Edit"/>
                                            <Button Classes="Ghost" Content="ðŸ—‘ï¸" Padding="8" Click="OnDeleteRoute" Foreground="Red" ToolTip.Tip="Delete"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Edit Form Card -->
            <Border Grid.Column="1" Classes="Card" 
                    IsVisible="{Binding IsEditMode}" Width="350">
                <StackPanel Spacing="20">
                    <TextBlock Text="{Binding SelectedRoute, Converter={StaticResource NullToTextConverter}, ConverterParameter='Edit Route:New Route'}" 
                               FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="Origin" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Stations}" SelectedItem="{Binding SelectedOriginStation}" 
                                  HorizontalAlignment="Stretch" PlaceholderText="Select Origin">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Destination" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Stations}" SelectedItem="{Binding SelectedDestinationStation}" 
                                  HorizontalAlignment="Stretch" PlaceholderText="Select Destination">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Spacing="5">
                         <TextBlock Text="Price (FCFA)" Foreground="{StaticResource LightTextBrush}" FontSize="12"/>
                         <NumericUpDown Value="{Binding Price}" Minimum="0" Maximum="100000" FormatString="N0"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#E74C3C" TextWrapping="Wrap" FontSize="12"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Classes="Ghost" Content="Cancel" Command="{Binding CancelEditCommand}"/>
                        <Button Content="Save Route" Command="{Binding SaveRouteCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

