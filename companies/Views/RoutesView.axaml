<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CompanyDashboard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CompanyDashboard.Views.RoutesView"
             x:DataType="vm:RoutesViewModel">

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Route Management" FontSize="24" FontWeight="Bold"/>
            <Button Content="âž• New Route" Command="{Binding NewRouteCommand}" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <StackPanel Spacing="10">
                    <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
                    
                    <ListBox ItemsSource="{Binding Routes}" SelectedItem="{Binding SelectedRoute}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid ColumnDefinitions="*,*,120,*">
                                        <TextBlock Grid.Column="0" Text="{Binding Origin}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Destination}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat='{}{0:F} FCFA'}" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                            <Button Content="âœï¸ Edit" Padding="5" Click="OnEditRoute"/>
                                            <Button Content="ðŸ—‘ï¸ Delete" Padding="5" Click="OnDeleteRoute"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="8" Padding="15" 
                    IsVisible="{Binding IsEditMode}" Width="300">
                <StackPanel Spacing="15">
                    <TextBlock Text="New Route" FontSize="18" FontWeight="Bold"/>
                    
                    <ComboBox ItemsSource="{Binding Stations}" SelectedItem="{Binding SelectedOriginStation}" 
                              PlaceholderText="Select Origin">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox ItemsSource="{Binding Stations}" SelectedItem="{Binding SelectedDestinationStation}" 
                              PlaceholderText="Select Destination">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <NumericUpDown Watermark="Price (FCFA)" Value="{Binding Price}" Minimum="0" Maximum="100000"/>
                    
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <Button Content="Save" Command="{Binding SaveRouteCommand}"/>
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

