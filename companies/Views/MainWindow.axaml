                                <TextBlock Text="ðŸ›£ï¸"/>
                                <TextBlock Text="Routes" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Classes="Ghost" Command="{Binding NavigateToStationsCommand}" 
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="12,10"
                                CornerRadius="8">
                             <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ“"/>
