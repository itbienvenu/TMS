                            </StackPanel>
                        </Button>
                        
                        <Button Classes="Ghost" Command="{Binding NavigateToSchedulesCommand}" 
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="12,10"
                                CornerRadius="8">
                             <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ“…"/>
                                <TextBlock Text="Schedules" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                        
                         <Button Classes="Ghost" Command="{Binding NavigateToTicketsCommand}" 
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="12,10"
                                CornerRadius="8">
                             <StackPanel Orientation="Horizontal" Spacing="12">
                                 <TextBlock Text="ðŸŽ«"/>
                                 <TextBlock Text="Tickets" FontWeight="Medium"/>
                             </StackPanel>
                        </Button>
                        
