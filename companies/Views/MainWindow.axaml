                             </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Footer / Logout -->
                <StackPanel Grid.Row="2" Margin="12,20" Spacing="5" VerticalAlignment="Bottom">
                     <Separator Background="{StaticResource BorderBrush}" Margin="0,0,0,10"/>
                     <Button Classes="Ghost" Command="{Binding LogoutCommand}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="12,10"
                            Foreground="#DC3545">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸšª"/>
